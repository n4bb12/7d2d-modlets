<config>
  <!-- Normal zombies -->
  <set xpath="/entity_classes/entity_class[starts-with(@name,'zombie')]/property[@name='LootDropProb' and @value='0.02']/@value">0.05</set>
  <!-- Feral zombies -->
  <set xpath="/entity_classes/entity_class[substring(@name, string-length(@name) - string-length('Feral') + 1) = 'Feral']/property[@name='LootDropProb' and @value='.03']/@value">10</set>
  <!-- Radiated zombies -->
  <set xpath="/entity_classes/entity_class[substring(@name, string-length(@name) - string-length('Radiated') + 1) = 'Radiated']/property[@name='LootDropProb' and @value='.03']/@value">25</set>
</config>
