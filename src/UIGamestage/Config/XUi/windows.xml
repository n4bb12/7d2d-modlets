<config>
  <append xpath='/windows'>
    <window name="n4bb12_TopLeftStatBars" visible="{toolbeltvisible}" controller="ToolbeltWindow">
      <rect pos="10,-10" rows="3" cols="1" width="100" side="right">
        <!-- deaths -->
        <rect width="100" height="43" pos="0,0">
          <filledsprite depth="5" name="BarContent" color="[n4bb12_deaths]" type="filled" fill="1"/>
          <label pos="40,-8" width="60" depth="7" name="TextContent" font_size="28" color="[white]" justify="center" pivot="topleft" height="30" text="{playerdeaths}" controller="PlayerStatsWindow"/>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"/>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_skull" size="32,32" pos="8,-6" foregroundlayer="true"/>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
        </rect>
        <!-- kills -->
        <rect width="100" height="43" pos="110,0">
          <filledsprite depth="5" name="BarContent" color="[n4bb12_kills]" type="filled" fill="1"/>
          <label pos="40,-8" width="60" depth="7" name="TextContent" font_size="28" color="[white]" justify="center" pivot="topleft" height="30" text="{playerzombiekills}" controller="PlayerStatsWindow"/>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"/>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_knife" size="32,32" pos="8,-6" foregroundlayer="true"/>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
        </rect>
        <!-- gamestage -->
        <!-- <rect width="100" height="43" pos="220,0">
          <filledsprite depth="5" name="BarContent" color="[n4bb12_stage]" type="filled" fill="1"/>
          <label pos="40,-8" width="60" depth="7" name="TextContent" font_size="28" color="[white]" justify="center" pivot="topleft" height="30" text="{gamestage}" controller="PlayerStatsWindow"/>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"/>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_defense" size="32,32" pos="8,-6" foregroundlayer="true"/>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
        </rect> -->
      </rect>
    </window>
  </append>
</config>
