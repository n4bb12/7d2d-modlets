<config>
  <remove xpath='/spawning/biome[@name="city"]'/>
  <remove xpath='/spawning/biome[@name="city_wasteland"]'/>
  <remove xpath='/spawning/biome[@name="wasteland_hub"]'/>
  <remove xpath='/spawning/biome[@name="pine_forest"]'/>
  <remove xpath='/spawning/biome[@name="desert"]'/>
  <remove xpath='/spawning/biome[@name="wasteland"]'/>
  <remove xpath='/spawning/biome[@name="burnt_forest"]'/>
  <remove xpath='/spawning/biome[@name="snow"]'/>
  <append xpath='/spawning'>
    <biome name="city">
      <spawn entitygroup="ZombiesAll"                 time="Day"   maxcount="20" respawndelay="2"/>
      <spawn entitygroup="ZombieDogGroup"             time="Day"   maxcount="2" respawndelay="2"/>
      <spawn entitygroup="ZombiesNight"               time="Night" maxcount="10" respawndelay="2"/>
      <spawn entitygroup="ZombieDogGroup"             time="Night" maxcount="1" respawndelay="2"/>
    </biome>
    <biome name="city_wasteland">
      <spawn entitygroup="ZombiesAll"                 time="Day"   maxcount="20" respawndelay="2"/>
      <spawn entitygroup="ZombiesBoss"                time="Day"   maxcount="2" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsWasteland"      time="Day"   maxcount="2" respawndelay="2"/>
      <spawn entitygroup="ZombiesWastelandNight"      time="Night" maxcount="10" respawndelay="2"/>
      <spawn entitygroup="ZombiesBoss"                time="Night" maxcount="1" respawndelay="2"/>
    </biome>
    <biome name="wasteland_hub">
      <spawn entitygroup="ZombiesWasteland"           time="Day"   maxcount="8" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsWasteland"      time="Day"   maxcount="2" respawndelay="2"/>
      <spawn entitygroup="ZombiesWastelandNight"      time="Night" maxcount="4" respawndelay="2"/>
    </biome>
    <biome name="pine_forest">
      <spawn entitygroup="ZombiesAll"                 time="Day"   maxcount="2" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsForest"         time="Day"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="FriendlyAnimalsForest"      time="Day"   maxcount="2" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="ZombiesAll"                 time="Night" maxcount="1" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsForest"         time="Night" maxcount="2" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="FriendlyAnimalsForest"      time="Night" maxcount="4" respawndelay="2" spawnDeadChance="0"/>
    </biome>
    <biome name="desert">
      <spawn entitygroup="ZombiesAll"                 time="Any"   maxcount="2" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsDesert"         time="Any"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="FriendlyAnimalsDesert"      time="Any"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
    </biome>
    <biome name="wasteland">
      <spawn entitygroup="ZombiesAll"                 time="Day"   maxcount="4" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsWasteland"      time="Day"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="FriendlyAnimalsWasteland"   time="Day"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="ZombiesWastelandNight"      time="Night" maxcount="2" respawndelay="2"/>
    </biome>
    <biome name="burnt_forest">
      <spawn entitygroup="ZombiesBurntForest"         time="Day"   maxcount="2" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsBurntForest"    time="Day"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="FriendlyAnimalsBurntForest" time="Day"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="ZombiesBurntForest"         time="Night" maxcount="4" respawndelay="2"/>
    </biome>
    <biome name="snow">
      <spawn entitygroup="SnowZombies"                time="Day"   maxcount="2" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsSnow"           time="Day"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="FriendlyAnimalsSnow"        time="Day"   maxcount="1" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="SnowZombies"                time="Night" maxcount="2" respawndelay="2"/>
      <spawn entitygroup="EnemyAnimalsSnow"           time="Night" maxcount="2" respawndelay="2" spawnDeadChance="0"/>
      <spawn entitygroup="FriendlyAnimalsSnow"        time="Night" maxcount="4" respawndelay="2" spawnDeadChance="0"/>
    </biome>
  </append>
</config>
